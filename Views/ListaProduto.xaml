<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtividadeAppMinhasCompras.Views.ListaProduto"
             Title="ListaProduto">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Somar" Clicked="ToolbarItem_Clicked_1"/>
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout>
        <SearchBar x:Name="txt_search" 
                   Placeholder="Busca de produtos" 
                   TextChanged="txt_search_TextChanged"/>
        <ListView x:Name="lst_produtos" ItemSelected="lst_produtos_ItemSelected">
            <ListView.Header>
                <Grid ColumnDefinitions="*, *, *, *, *" >
                    <Label Text="ID" Grid.Column="0" FontAttributes="Bold"/>
                    <Label Text="Desc" Grid.Column="1" FontAttributes="Bold"/>
                    <Label Text="PreÃ§o" Grid.Column="2" FontAttributes="Bold"/>
                    <Label Text="QTD" Grid.Column="3" FontAttributes="Bold"/>
                    <Label Text="Total" Grid.Column="4" FontAttributes="Bold"/>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Remover" Clicked="MenuItem_Clicked"/>
                        </ViewCell.ContextActions>
                        <Grid ColumnDefinitions="*, *, *, *, *">
                            <Label Text="{Binding Id}" Grid.Column="0" />
                            <Label Text="{Binding Descricao}" Grid.Column="1" />
                            <Label Text="{Binding Preco}" Grid.Column="2" />
                            <Label Text="{Binding Quantidade}" Grid.Column="3" />
                            <Label Text="{Binding Total}" Grid.Column="4" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>
    </VerticalStackLayout>
</ContentPage> 